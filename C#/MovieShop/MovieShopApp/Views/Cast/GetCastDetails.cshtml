@model MovieShopCore.Models.CastModel

<div class="container mt - 5">
    <div class="row">
        <div class="col-4">
            <img src="@Model.ProfilePath" alt="@Model.Name" class="img-fluid rounded"/>
        </div>
        
        <div class="col-8">
            <h1>@Model.Name</h1>
            <h5>Total Films:</h5>
            <h5 class="text-muted">@Model.MoviesCastModels.Count</h5>
        </div>
    </div>
</div>